extends includes/layout.pug

block content
    section.container
        .card
            .card__title Create Member
            form#js-create-form.form__wrapper(action="https://reqres.in/api/users",method="POST") 
                .form__group
                    input.form__control(type="text",name="name",placeholder="Name *",required)
                .from__group
                    input.form__control(type="text",name="job",placeholder="Job *",required)
                button.btn.btn--primary(type="submit") Create 
                button.btn.btn--primary(type="button",onclick="history.back()") Back
    #js-alert-wrapper